<div id="wrapper-review" tab-index="0" class="wrapper-view make-payment-step">
  <div class="review view">
    <% if ( !isActive ) { %>
        <h2 class="page-title">
            <%- gettext("Activate your account.") %>
        </h2>
    <% } else if ( !upgrade ) { %>
      <h2 class="page-title">
        <%= _.sprintf(
            gettext( "You are enrolling in: %(courseName)s"),
            { courseName: '<span class="course-title">' + courseName + '</span>' }
          ) %>
      </h2>
    <% } else { %>
      <h2 class="page-title">
        <%= _.sprintf(
            gettext( "Upgrade to Verified Certificate: %(courseName)s"),
            { courseName: '<span class="course-title">' + courseName + '</span>' }
          ) %>
      </h2>
    <% } %>

    <% if ( !isActive ) { %>
        <p>
            <%- gettext("Prior to completing this course purchase, you must activate your account.") %>
            <%- gettext("Check your email for the activation link.") %>
        </p>
    <% } else { %>

        <div class="certificate <%- courseModeSlug %>_icon">
            <div class="purchase">
              <p class="product-info"><span class="product-name"></span> <%- gettext( "Total" ) %>: <span class="price">$<%- minPrice %> USD</span></p>
            </div>
            <p>You need to activate your account before you can enroll in courses. Check your inbox for an activation email. After you complete activation you can return and refresh this page.</p>
        </div>
    <% } %>


    <% if ( isActive ) { %>
      <div class="payment-buttons is-ready center">
        <input type="hidden" name="contribution" value="<%- minPrice %>" />
        <input type="hidden" name="sku" value="<%- sku %>" />
        <div class="pay-options">
          <%
          // payment buttons will go here
          %>
        </div>
      </div>
    <% } %>

    <form id="payment-processor-form"></form>
    </div>

    <% if ( isActive ) { %>
        <div class="container">
            <% if ( _.some( requirements, function( isVisible ) { return isVisible; } ) ) { %>
                <p>
                    <% if ( verificationDeadline ) { %>
                      <%- _.sprintf(
                        gettext( "In addition to payment, you will need to verify your identity (before %(date)s)." ),
                        { date: verificationDeadline }
                      ) %>
                    <% } else  { %>
                        <%- gettext( "In addition to payment, you will need to verify your identity." ) %>
                    <% } %>
                     <%- gettext("For verification you will need a webcam and a photo ID.") %>
                </p>
                <% if ( requirements['photo-id-required'] ) { %>
                    <div class="photo-requirement user_icon">
                        <h6>Your Photo ID</h6>
                        <p>Cheating rarely happens, but we need make sure you are who you say you are.</p>
                    </div>
                 <% } %>

                <% if ( requirements['webcam-required'] ) { %>
                    <div class="photo-requirement cam_icon">
                        <h6>Enable Your WebCam</h6>
                        <p>Cheating rarely happens, but we need make sure you are who you say you are.</p>
                    </div>
                <% } %>
            <% } %>
        </div>
    <% } %>
